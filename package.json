{
  "name": "naikit",
  "version": "0.1.0",
  "type": "module",
  "description": "A web extension for managing your prompts",
  "scripts": {
    "dev": "bun run clean && vite build --watch --mode development",
    "build": "tsc && vite build --mode production",
    "build:analyze": "cross-env ANALYZE=true vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "package": "bun run build && cd dist && zip -r ../naikit-v$npm_package_version.zip .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prebuild": "bun run clean && bun run typecheck && bun run lint",
    "postbuild": "node scripts/postbuild.js"
  },
  "dependencies": {
    "@tiptap/extension-placeholder": "^2.11.5",
    "@tiptap/react": "^2.11.5",
    "@tiptap/starter-kit": "^2.11.5",
    "axion-state": "../axion",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@samrum/vite-plugin-web-extension": "^5.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.0.13",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/chrome": "^0.0.308",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^17.4.3",
    "postcss": "^8.5.3",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^4.0.13",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  }
}
